{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - View!{% endblock %}
{% block header %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <section class="text-center">
        <article>
            <h1>{{ advert.title }}</h1>
            <table class="table table-striped table-danger text-center">
                <tbody>
                <tr>
                    <td width="20%"></td>
                    <td width="30%">
                        <br>
                        <br>
                        <br>
                        <p class="text-justify">
                            {{ advert.text }}
                        </p>
                        <br>
                        <br>
                        <br>
                        <p>
                            {{ advert.advertUser.firstName }}-{{ advert.advertUser.name }}
                            a posté cette annonce le {{ advert.createdAt | date('d/m/Y') }}
                        </p>
                        <p>
                            Catégorie :  {{ advert.category.category }} .
                        </p>
                    </td>
                    <td width="50%"> {% if advert.photo is defined %}
                            <img src="{{ asset('uploads/photos/' ~ advert.photo) }}" class="img-fluid"
                                 alt="Responsive image"
                            >
                        {% endif %}
                    </td>
                </tr>
                </tbody>
            </table>
        </article>
    </section>
    <div class="text-center">
        <a href="{{ path('advert_index') }}">Retour à la liste des Annonces</a>
    </div>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}