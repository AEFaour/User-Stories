<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{{ maintitle }} {% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('style') }}
    {% endblock %}
</head>
<body>
{% block header %}
    {% include '_navbar.html.twig' %}
{% endblock %}
{% block body %}
{% endblock %}
{% block footer %}
    <table class="table table-striped table-danger text-center">
        <thead>
        <h3 class="text-danger text-left">Categories</h3>
        </thead>
        <tbody>
        {% for category in categoryList %}
            <tr class="list-group">
                <a href="{{ path('advert-by-category', {'id': category.id}) }}" role="button" class="btn btn-danger"
                   style="margin: 5px">
                    {{ category.category }}
                    <span class="badge badge-danger badge-pill" style="margin:5px">
                    {{ category.adverts | length }}
                </span></a>
            </tr>
        {% endfor %}
        <tr>
            <h4 class="text-danger text-right">
                {{ copyright }}
            </h4>

        </tr>
        </tbody>
    </table>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
